  <div class="container"> 
      <div class="row">
       <form action="/admin/login" method="post">
           <div class="mb-3 row">
   
            <label for="" class="col-sm-2 col-form-label">Usuario</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputUser" 
            placeholder="" name="usuario">
           </div>
         </div>
           <div class="mb-3 row">
             <label for="inputPassword" class="col-sm-2 col-form-label">Contraseña</label>
              <div class="col-sm-10">
               <input type="password" class="form-control" id="inputPassword"
               placeholder="" name="password">
              </div>
           </div>
           <button type="submit" class="btn btn-primary" style="width: max-content; margin:0px 45%"  >Ingresar </button>
           </form>
           {{#if error }}
                <p>Usuario u Contraseña incorrecto</p> 
           {{/if}}

           
       </div>

  </div>